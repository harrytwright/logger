{
  "name": "@harrytwright/logger",
  "version": "3.0.0-beta.6",
  "license": "MIT",
  "author": "Harry Wright",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "browser": "./logger.min.js",
  "unpkg": "./logger.min.js",
  "repository": {
    "type": "git",
    "url": "https://git@github.com/harrytwright/logger.git"
  },
  "files": [
    "/dist/index.js",
    "/dist/index.d.ts",
    "logger.min.js"
  ],
  "workspaces": [
    "redactions/*"
  ],
  "scripts": {
    "prepare": "npm run lint",
    "build": "bash build.sh",
    "lint": "standard --fix",
    "test": "cross-env NODE_ENV=test npm run test:lib && npm run test:redactions",
    "test:lib": "mocha --require ./test/bootstrap/index.js test/logging.test.js test/logging.node.test.js",
    "test:all": "cross-env NODE_ENV=test npm run test && npm run test:browser",
    "pretest:browser": "npm run build",
    "test:browser": "karma start karma.conf.js --single-run --browsers HeadlessChrome",
    "posttest:browser": "rm -r logger.js logger.min.js",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "prepublishOnly": "npm run build",
    "postpublish": "rm -Rf logger.js logger.min.js ./dist"
  },
  "devDependencies": {
    "@types/node": "^17.0.22",
    "browserify": "^17.0.0",
    "chai": "^4.3.6",
    "cross-env": "7.0.3",
    "envify": "^4.1.0",
    "google-closure-compiler": "^20220301.0.0",
    "karma": "^6.3.17",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "2.0.1",
    "mocha": "^9.2.2",
    "nyc": "15.1.0",
    "require-inject": "^1.4.4",
    "semver": "^7.3.7",
    "sinon": "^13.0.1",
    "standard": "16.0.4"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "global": [
      "chai",
      "logger"
    ]
  }
}
